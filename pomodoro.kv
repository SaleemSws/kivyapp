<Pomodoro>:
    orientation: 'vertical'
    padding: 70
    spacing: 60

    Label:
        text: 'POMODORO TIMER'
        font_size: 36
        size_hint_y: None
        height: self.texture_size[1]

    Label:
        text: 'Current Mode: ' + root.mode
        font_size: 24
        size_hint_y: None
        height: self.texture_size[1]

    Label:
        text: '{:02d}:{:02d}'.format(root.time // 60, root.time % 60)
        font_size: 72  # Increased font size
        size_hint_y: None
        height: self.texture_size[1]
        color: (0.2, 0.8, 0.2, 1) if root.mode == 'WORK' else (0.2, 0.2, 0.8, 1)

    BoxLayout:
        size_hint_y: None
        height: 60  # Increased button height
        spacing: 15

        Button:
            text: 'Start'
            font_size: 24
            on_press: root.start_timer()
            

        Button:
            text: 'Stop'
            font_size: 24
            on_press: root.stop_timer()
            

        Button:
            text: 'Reset'
            font_size: 24
            on_press: root.reset_timer()
            

    Button:
        text: 'Switch to ' + ('Break' if root.mode == 'WORK' else 'Work')
        size_hint_y: None
        height: 60
        font_size: 24
        on_press: root.switch_mode()
        background_color: 0.4, 0.4, 0.8, 1